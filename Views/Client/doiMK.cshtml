
@{
    ViewBag.Title = "doiMK";
    Layout = "~/Views/Shared/LayoutClient.cshtml";
}
@using (Html.BeginForm("doiMK", "Client", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="row border border-2 border-primary rounded-3"  >
        <div class="row"><span class="text-uppercase h3 fw-bolder text-primary opacity-75"> Đổi mật khẩu</span></div>
        <div class="col-4">
            <img id="output" class="img-account-profile border w-100 h-100" src="~/Img/@ViewBag.anh" alt="">
        </div>
        <div class="col-8">
            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label">Mật khẩu cũ:</label>
                <input type="password" id="oldMK" name="oldMK" class="form-control form-control-lg" />
            </div>

            <div data-mdb-input-init class="form-outline mb-4">
                <label class="form-label">Mật khẩu mới:</label>
                <input type="password" id="newMK" name="newMK" class="form-control form-control-lg" />
            </div>
            <div class="pt-1 mb-4">
                <button class="btn btn-dark btn-lg btn-block w-100 text-uppercase fw-bolder" type="submit">Đổi mật khẩu</button>
            </div>
        </div>
    </div>
}

