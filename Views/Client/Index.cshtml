@*@model IEnumerable<Web_QLNS_VTH.Models.NhanVien>*@
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/LayoutClient.cshtml";
}
<style>
    .about-text h3 {
  font-size: 45px;
  font-weight: 700;
  margin: 0 0 6px;
}
.about-text h6 {
  font-weight: 600;
  margin-bottom: 15px;
}

.about-text p {
  font-size: 18px;
}
.about-text p mark {
  font-weight: 600;
  color: #20247b;
}

.about-list {
  padding-top: 10px;
}
.about-list .media {
  padding: 5px 0;
}
.about-list label {
  color: #20247b;
  font-weight: 600;
  margin: 0;
  position: relative;
}
.about-list label:after {
  content: "";
  position: absolute;
  top: 0;
  bottom: 0;
  right: 11px;
  width: 1px;
  height: 12px;
  background: #20247b;
  -moz-transform: rotate(15deg);
  -o-transform: rotate(15deg);
  -ms-transform: rotate(15deg);
  -webkit-transform: rotate(15deg);
  transform: rotate(15deg);
  margin: auto;
  opacity: 0.5;
}
.about-list p {
  margin: 0;
  font-size: 15px;
}

</style>
<span class="text-uppercase h3 fw-bolder text-primary opacity-75"> Thông tin cá nhân</span>
<section class="section d-flex justify-content-center border border-dark rounded-3 p-3" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-8">
                <div class="about-text go-to">
                    <h3 class="dark-color">@Model.hoTen</h3>
                    <h6 class="theme-color lead">@Model.ChucVu.tenChucVu</h6>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label>Giới tính</label>
                                <p>@Model.gioiTinh</p>
                            </div>
                            <div class="media">
                                <label>Tuổi</label>
                                <p>@ViewBag.dt.ToString()</p>
                            </div>
                            <div class="media">
                                <label>Ngày sinh</label>
                                <p>@Model.ngaySinh.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="media">
                                <label>Địa chỉ</label>
                                <p>@Model.diaChi</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label>E-mail</label>
                                <p>@Model.mail</p>
                            </div>
                            <div class="media">
                                <label>Số điện thoại</label>
                                <p>@Model.sdt</p>
                            </div>
                            <div class="media">
                                <label>Ngày vào công ty</label>
                                <p>@Model.ngayVaoCT.ToString("dd/MM/yyyy")</p>
                            </div>
                            <div class="media">
                                <label>Căn cước công dân</label>
                                <p>@Model.cccd</p>
                            </div>
                            <div class="media">
                                <label>Trình độ</label>
                                <p>@Model.trinhDo</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="about-avatar">
                    <img width="250" height="400" id="output" class="img-account-profile mb-2 mt-2 border" src="~/Img/@Model.anh" alt="">
                </div>
            </div>
        </div>
        
    </div>
</section>